<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/CSContainer">

    <com.google.android.material.card.MaterialCardView style="@style/CSPageTitleCard">

        <TextView
            android:id="@+id/CSLog_Title"
            style="@style/CSPageTitleMatchWrap"
            android:text="Application Log" />
    </com.google.android.material.card.MaterialCardView>


    <com.google.android.material.card.MaterialCardView style="@style/CSContentCardMatchFill">

        <ScrollView
            android:background="@color/cs_white"
            android:id="@+id/CSLog_TextScroll"
            style="@style/cs_match"
            android:fillViewport="true"
            android:scrollbars="vertical">

            <TextView
                android:gravity="start"
                android:id="@+id/CSLog_LogText"
                style="@style/cs_match"
                android:scrollbars="vertical" />

        </ScrollView>


        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/CSLog_Reload"
            style="@style/CSFloatingButtonBottomEndWrap"
            android:src="@drawable/outline_refresh_24" />

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>
